# Variables
NAME = school
SRC = $(wildcard *.c)
OBJ = $(SRC:.c=.o)
CC = gcc
CFLAGS = -Wall -Werror -Wextra -pedantic

# Default target, builds your executable
all: $(NAME)

# Linking the object files to create the executable
$(NAME): $(OBJ)
	$(CC) $(OBJ) -o $(NAME)

# Rule to delete temporary files and the executable
clean:
	$(RM) *~ \#* $(NAME)

# Rule to delete object files
oclean:
	$(RM) $(OBJ)

# Rule to delete temporary files, object files, and the executable
fclean: clean oclean

# Recompiles everything by cleaning and then running 'all'
re: fclean all

# Ensure header file m.h is required for compilation
$(SRC): m.h

# Prevent Makefile from being affected by files with same name as rules
.PHONY: all clean oclean fclean re
